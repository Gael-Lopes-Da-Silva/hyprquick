{
    "general": {
        "compositor": "hyprland",
        "wallpaper": {
            "path": "./assets/wallpapers/wallpaper.png",
            "animated": false
        },
        "sidebar": {
            "clock": {
                "showSeconds": false,
                "useTwelveHourClock": false
            }
        }
    },
    "appearance": {
        "wrapper": {
            "background": "#1a1a1a",
            "implicitSize": 20,
            "radius": 30,
            "shadow": {
                "enabled": true,
                "color": "#000000",
                "blur": 0.8,
                "opacity": 1
            }
        },
        "sidebar": {
            "implicitSize": 50,
            "topMargin": 5,
            "bottomMargin": 5,
            "spacing": 20,
            "power": {
                "background": "#2a2a2a",
                "radius": 1000,
                "size": 40,
                "button": {
                    "margin": 4,
                    "iconSize": 16,
                    "hovered": "#3a3a3a",
                    "color": "#ffffff"
                }
            },
            "workspaces": {
                "spacing": 4,
                "windowCount": {
                    "background": "#2a2a2a",
                    "color": "#ffffff",
                    "radius": 1000,
                    "size": 40,
                    "iconSize": 16,
                    "fontSize": 12
                },
                "indicators": {
                    "background": "#2a2a2a",
                    "radius": 1000,
                    "size": 40,
                    "spacing": 0,
                    "indicator": {
                        "background": "transparent",
                        "urgent": "#6a3a3a",
                        "specialSelected": "#4a4a4a",
                        "selected": "#3a3a3a",
                        "specialColor": "#ffffff",
                        "color": "#ffffff",
                        "margin": 4,
                        "specialFontSize": 16,
                        "fontSize": 12
                    }
                }
            },
            "clock": {
                "background": "#2a2a2a",
                "radius": 1000,
                "size": 40,
                "spacing": 0,
                "button": {
                    "hovered": "#3a3a3a",
                    "iconColor": "#ffffff",
                    "color": "#ffffff",
                    "margin": 4,
                    "iconSize": 16,
                    "fontSize": 16
                }
            },
            "status": {
                "background": "#2a2a2a",
                "radius": 1000,
                "size": 40,
                "button": {
                    "hovered": "#3a3a3a",
                    "color": "#ffffff",
                    "margin": 4,
                    "iconSize": 16
                }
            },
            "systemTray": {
                "background": "#2a2a2a",
                "radius": 1000,
                "size": 40,
                "button": {
                    "hovered": "#3a3a3a",
                    "margin": 4,
                    "iconSize": 20
                }
            }
        }
    }
}
